#!/bin/bash

set -e

. /usr/share/debconf/confmodule

# Check if this is a reconfiguration
if [ "$1" = "reconfigure" ]; then
    # During reconfiguration, always prompt for configuration
    db_fset ispconfig-zabbix-monitoring/ispconfig_url seen false || true
    db_fset ispconfig-zabbix-monitoring/ispconfig_login seen false || true  
    db_fset ispconfig-zabbix-monitoring/ispconfig_password seen false || true
fi

# Prompt for configuration values
db_input medium ispconfig-zabbix-monitoring/ispconfig_url || true
db_input medium ispconfig-zabbix-monitoring/ispconfig_login || true
db_input medium ispconfig-zabbix-monitoring/ispconfig_password || true

db_go || true